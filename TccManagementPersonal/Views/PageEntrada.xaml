<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TccManagementPersonal.Views.PageEntrada"
             Title="PageEntrada"
             Background="#5D5C96"
            NavigationPage.HasNavigationBar="false">

    <ContentPage.BackgroundImageSource>
        <FileImageSource />
    </ContentPage.BackgroundImageSource>

    <Frame MaximumWidthRequest="350" MaximumHeightRequest="500" MinimumHeightRequest="350" MinimumWidthRequest="250" Background="#3D3D3D">
        <Grid RowDefinitions="*,*">
            <StackLayout Grid.Row="0">
                <Image Source="dotnet_bot.png"/>
                <Label 
                    Text="Olá, Seja bem vindo"
                    FontSize="23"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            </StackLayout>


            <StackLayout Grid.Row="1" VerticalOptions="End">
                <Button Text="Login" Clicked="Login"/>
                <Label Text="Não possuo uma conta" HorizontalOptions="End" Margin="0,20,60,60"/>
            </StackLayout>

        </Grid>
    </Frame>

</ContentPage>